@using LDBeauty.Core.Models
@model AddImageViewModel

<header>
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-6 fw-bolder" style="color:black">Add new picture to gallery</h1>
        </div>
    </div>
</header>
<section class="page-section" id="services">
    <div class="container">
        <section class="py-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-2 justify-content-center">
                <form method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Category" class="form-control" name="Category" autocomplete="Category" aria-required="true" />
                        <label asp-for="Category" class="form-label"></label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PictureUrl" class="form-control" name="PictureUrl" autocomplete="Picture url" aria-required="true" />
                        <label asp-for="PictureUrl" class="form-label"></label>
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Description"  class="form-control" name="Description" autocomplete="Decription" aria-required="true" />
                        <label asp-for="Description" class="form-label" ></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </form>
            </div>
        </section>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}