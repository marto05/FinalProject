@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="text-center">
    <h1>Are you sure you want to log out?</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="justify-content-center m-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-secondary">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
