@using LDBeauty.Core.Models.Gallery
@model List<ImageViewModel>

@if (@Model.Count() == 0)
{
    <h3 class="text-center mt-5 m-4">You don't have favourite images! </h3>

    <div class="d-flex justify-content-center m-4">
        <a class="btn btn-outline-dark mt-auto" asp-action="images" asp-controller="gallery">Go to gallery page</a>
    </div>
}
else
{

    <h3 class="text-center mt-5">Favourite images: </h3>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                @foreach (var item in @Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <a asp-action="details" asp-controller="gallery" asp-route-id="@item.Id" class="btn">
                            <img height="330" class="card-img-top" src="@item.ImgUrl" alt="..." />
                            </a>
                            <div class="card-body p-4">
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="RemoveFromFavourites" asp-controller="MyLd" asp-route-id="@item.Id">Remove</a></div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>

}
