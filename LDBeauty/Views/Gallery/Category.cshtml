@using LDBeauty.Core.Models.Gallery
@model IEnumerable<GalleryCategoryViewModel>

<partial name="_Logo"/>

@if(@Model.Count() == 0)
{
    <h3 class="display-6 fw-bolder text-center" style="color:black">Category list is empty.</h3>
}
else
{
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            
            @foreach (var item in @Model)
            {
             <div class="col mb-5">
                <div class="card h-100">
                    <img height="330" class="card-img-top" src="@item.ImgUrl" alt="..." />
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h5 class="fw-bolder">@item.Name</h5>
                        </div>
                    </div>
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a asp-controller="gallery" asp-action="images" asp-route-id="@item.Id" class="btn btn-outline-dark mt-auto">View</a></div>
                    </div>
                </div>
            </div>
            }
          
        </div>
    </div>
</section>
}
